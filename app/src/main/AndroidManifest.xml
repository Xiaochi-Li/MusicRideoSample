<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicrideosample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".redio"
            android:label="@string/redio" />
        <activity
            android:name=".playlist"
            android:label="@string/customizePlayList" />
        <activity android:name=".mood"
            android:label="@string/mood"/>
        <activity android:name=".album"
            android:label="@string/album"></activity>
    </application>

</manifest>